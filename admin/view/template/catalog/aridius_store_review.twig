{{ header }}{{ column_left }} 
<div id="content">
   <div class="page-header">
      <div class="container-fluid">
         <div class="pull-right">
            <a href="{{ store_review }}" data-toggle="tooltip" title="{{ button_store_review }}" class="btn btn-warning"><i class="fa fa-bullhorn"></i>&nbsp;&nbsp;{{ text_store_review }}</a>
            <button type="submit" form="form-aridius_store_review" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp;&nbsp;{{ button_save }}</button> 
            <a onclick="apply();" class="btn btn-primary" data-toggle="tooltip" title="{{ button_apply }}" ><i class="fa fa-check"></i>&nbsp;&nbsp;{{ button_apply }}</a>
            <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
         </div>
         <h1>{{ heading_title }}</h1>
         <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %} 
            <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
            {% endfor %} 
         </ul>
      </div>
   </div>
   <div class="container-fluid">
      {% if (error_warning) %} 
      <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
         <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %} 
      <div class="panel panel-default">
         <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
         </div>
         <div class="panel-body">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-aridius_store_review" class="form-horizontal">
               <div class="form-group">
                  <label class="col-sm-3 control-label" >{{ entry_review_guest }}</label>
                  <div class="col-sm-9 them">
                     <label class="radio-inline">
                     {% if (aridius_store_review_review_guest) %} 
                     <input class="options_none" type="radio" name="aridius_store_review_review_guest" value="0" />
                     <span class="im_option">{{ text_yes }}</span> 
                     {% else %} 
                     <input class="options_none" type="radio" name="aridius_store_review_review_guest" value="0" checked="checked" />
                     <span class="im_option">{{ text_yes }}</span> 
                     {% endif %} 
                     </label>
                     <label class="radio-inline">
                     {% if (not aridius_store_review_review_guest) %} 
                     <input class="options_none" type="radio" name="aridius_store_review_review_guest" value="1" />
                     <span class="im_option">{{ text_no}}</span> 
                     {% else %} 
                     <input class="options_none" type="radio" name="aridius_store_review_review_guest" value="1" checked="checked" />
                     <span class="im_option">{{ text_no}}</span> 
                     {% endif %} 
                     </label>
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-3 control-label" >{{ entry_answer_button }}</label>
                  <div class="col-sm-9 them">
                     <label class="radio-inline">
                     {% if (aridius_store_review_display_answer_button) %} 
                     <input class="options_none" type="radio" name="aridius_store_review_display_answer_button" value="0" />
                     <span class="im_option">{{ text_yes }}</span> 
                     {% else %} 
                     <input class="options_none" type="radio" name="aridius_store_review_display_answer_button" value="0" checked="checked" />
                     <span class="im_option">{{ text_yes }}</span> 
                     {% endif %} 
                     </label>
                     <label class="radio-inline">
                     {% if (not aridius_store_review_display_answer_button) %} 
                     <input class="options_none" type="radio" name="aridius_store_review_display_answer_button" value="1" />
                     <span class="im_option">{{ text_no}}</span> 
                     {% else %} 
                     <input class="options_none" type="radio" name="aridius_store_review_display_answer_button" value="1" checked="checked" />
                     <span class="im_option">{{ text_no}}</span> 
                     {% endif %} 
                     </label>
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-3 control-label" >{{ entry_average_rating }}</label>
                  <div class="col-sm-9 them">
                     <label class="radio-inline">
                     {% if (aridius_store_review_display_average_rating) %} 
                     <input class="options_none" type="radio" name="aridius_store_review_display_average_rating" value="0" />
                     <span class="im_option">{{ text_yes }}</span> 
                     {% else %} 
                     <input class="options_none" type="radio" name="aridius_store_review_display_average_rating" value="0" checked="checked" />
                     <span class="im_option">{{ text_yes }}</span> 
                     {% endif %} 
                     </label>
                     <label class="radio-inline">
                     {% if (not aridius_store_review_display_average_rating) %} 
                     <input class="options_none" type="radio" name="aridius_store_review_display_average_rating" value="1" />
                     <span class="im_option">{{ text_no}}</span> 
                     {% else %} 
                     <input class="options_none" type="radio" name="aridius_store_review_display_average_rating" value="1" checked="checked" />
                     <span class="im_option">{{ text_no}}</span> 
                     {% endif %} 
                     </label>
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-3 control-label" >{{ entry_default_rating }}</label>
                  <div class="col-sm-9 them">
                     <input type="text" name="aridius_store_review_default_rating" value="{{ aridius_store_review_default_rating }}" id="input-default_rating" class="form-control" />
                     {% if (error_default_rating) %} 
                     <div class="text-danger">{{ error_default_rating }}</div>
                     {% endif %} 
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-3 control-label" >{{ entry_limite_page }}</label>
                  <div class="col-sm-9 them">
                     <input type="text" name="aridius_store_review_limite_page" value="{{ aridius_store_review_limite_page }}" id="input-entry_limite_page" class="form-control" />
                     {% if (error_limite_page) %} 
                     <div class="text-danger">{{ error_limite_page }}</div>
                     {% endif %} 
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-3 control-label" >{{ entry_captcha }}</label>
                  <div class="col-sm-9 them">
                     <label class="radio-inline">
                     {% if (aridius_store_review_display_captcha) %} 
                     <input class="options_none" type="radio" name="aridius_store_review_display_captcha" value="0" />
                     <span class="im_option">{{ text_yes }}</span> 
                     {% else %} 
                     <input class="options_none" type="radio" name="aridius_store_review_display_captcha" value="0" checked="checked" />
                     <span class="im_option">{{ text_yes }}</span> 
                     {% endif %} 
                     </label>
                     <label class="radio-inline">
                     {% if (not aridius_store_review_display_captcha) %} 
                     <input class="options_none" type="radio" name="aridius_store_review_display_captcha" value="1" />
                     <span class="im_option">{{ text_no}}</span> 
                     {% else %} 
                     <input class="options_none" type="radio" name="aridius_store_review_display_captcha" value="1" checked="checked" />
                     <span class="im_option">{{ text_no}}</span> 
                     {% endif %} 
                     </label>
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-3 control-label" >{{ entry_mail }}</label>
                  <div class="col-sm-9 them">
                     <label class="radio-inline">
                     {% if (aridius_store_review_mail) %} 
                     <input class="options_none" type="radio" name="aridius_store_review_mail" value="0" />
                     <span class="im_option">{{ text_yes }}</span> 
                     {% else %} 
                     <input class="options_none" type="radio" name="aridius_store_review_mail" value="0" checked="checked" />
                     <span class="im_option">{{ text_yes }}</span> 
                     {% endif %} 
                     </label>
                     <label class="radio-inline">
                     {% if (not aridius_store_review_mail) %} 
                     <input class="options_none" type="radio" name="aridius_store_review_mail" value="1" />
                     <span class="im_option">{{ text_no}}</span> 
                     {% else %} 
                     <input class="options_none" type="radio" name="aridius_store_review_mail" value="1" checked="checked" />
                     <span class="im_option">{{ text_no}}</span> 
                     {% endif %} 
                     </label>
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-3 control-label">{{ entry_meta_title }}</label>
                  <div class="col-sm-9 them">
                     {% for language in languages %} 
                     <div class="input-group">
                        <span class="input-group-addon">
                        <img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" />
                        </span>
                        <input name="aridius_store_review_meta_title[{{ language['language_id'] }}]" value="{{ aridius_store_review_meta_title[language['language_id']] }}" class="form-control" />
                     </div>
                     {% endfor %} 
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-3 control-label">{{ entry_meta_description }}</label>
                  <div class="col-sm-9 them">
                     {% for language in languages %} 
                     <div class="input-group">
                        <span class="input-group-addon">
                        <img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" />
                        </span>
                        <input name="aridius_store_review_meta_description[{{ language['language_id'] }}]" value="{{ aridius_store_review_meta_description[language['language_id']] }}" class="form-control" />
                     </div>
                     {% endfor %} 
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-3 control-label">{{ entry_meta_keyword }}</label>
                  <div class="col-sm-9 them">
                     {% for language in languages %} 
                     <div class="input-group">
                        <span class="input-group-addon">
                        <img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" />
                        </span>
                        <input name="aridius_store_review_meta_keyword[{{ language['language_id'] }}]" value="{{ aridius_store_review_meta_keyword[language['language_id']] }}" class="form-control" />
                     </div>
                     {% endfor %} 
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-3 control-label" for="input-status">{{ entry_status }}</label>
                  <div class="col-sm-9 them">
                     <select name="aridius_store_review_status" id="input-status" class="form-control">
                        {% if (aridius_store_review_status) %} 
                        <option value="1" selected="selected">{{ text_enabled }}</option>
                        <option value="0">{{ text_disabled }}</option>
                        {% else %} 
                        <option value="1">{{ text_enabled }}</option>
                        <option value="0" selected="selected">{{ text_disabled }}</option>
                        {% endif %} 
                     </select>
                  </div>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>
<script><!--
   function apply() {
   	$('#form-aridius_store_review').append('<input type="hidden" id="apply" name="apply" value="1" />');
   	$('#form-aridius_store_review').submit();
   }
   //-->
</script>
{{ footer }}
