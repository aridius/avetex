{{ header }}{{ column_left }}
<div id="content">
   <div class="page-header">
      <div class="container-fluid">
         <h1>{{ heading_title }}</h1>
         <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
            {% endfor %}
         </ul>
      </div>
   </div>
   <div class="container-fluid">
      {% if (error_warning) %}
      <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
         <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %}
      <div class="panel panel-default">
         <div class="panel-heading">
            <h3 class="panel-title">{{ text_edit }}</h3>
         </div>
         <div class="col-sm-12" style="position: relative; text-align: center; font-size: 15px;">
            {{ license_info }}
            {{ _SERVER['SERVER_NAME'] }}
            <br /><br />
         </div>
         <div class="panel-body">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-slideshow" class="form-horizontal">
               <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-name">{{ license_code_name }}</label>
                  <div class="col-sm-10">
                     <input type="text" name="license_code" value="{{ license_code }}" placeholder="{{ license_code_name }}" id="input-license_code" class="form-control" />
                     {% if (error_license_code) %}
                     <div class="text-danger">{{ error_license_code }}</div>
                     {% endif %}
                  </div>
               </div>
               <div class="col-sm-offset-2">
                  <button type="submit" class="btn btn-default">{{ button_license_check }}</button>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>
{{ footer }}
