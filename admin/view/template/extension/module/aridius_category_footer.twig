{{ header }}{{ column_left }} 
<div id="content">
   <div class="page-header">
      <div class="container-fluid">
         <div class="pull-right">
            <button type="submit" form="form-category" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp;&nbsp;{{ button_save }}</button>
            <a onclick="apply();" class="btn btn-primary" data-toggle="tooltip" title="{{ button_apply }}" ><i class="fa fa-check"></i>&nbsp;&nbsp;{{ button_apply }}</a>
            <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
         </div>
         <h1>{{ heading_title }}</h1>
         <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %} 
            <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
            {% endfor %} 
         </ul>
      </div>
   </div>
   <div class="container-fluid">
      {% if (error_warning) %} 
      <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
         <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %} 
      <div class="panel panel-default">
         <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
         </div>
         <div class="panel-body">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-category" class="form-horizontal">
               <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-category">{{ text_categoryaccord }}</label>
                  <div class="col-sm-10 them">
                     <div class="well well-sm" style="min-height: 150px;max-height: 500px;overflow: auto;">
                        <table class="table table-striped">
 {% for category in categories %} 
                           <tr>
                              <td class="checkbox">
                                 <label>
                                {% if category.category_id in module_aridius_category_footer_visible %}
                                 <input type="checkbox" name="module_aridius_category_footer_visible[]" value="{{ category['category_id'] }}" checked="checked" />
                                 {{ category['name'] }} 
                                 {% else %} 
                                 <input type="checkbox" name="module_aridius_category_footer_visible[]" value="{{ category['category_id'] }}" />
                                 {{ category['name'] }} 
                                 {% endif %} 
                                 </label>
                              </td>
                           </tr>
                           {% endfor %} 
                        </table>
                     </div>
                     <a onclick="$(this).parent().find(':checkbox').prop('checked', true);">{{ text_all }}</a> / <a onclick="$(this).parent().find(':checkbox').prop('checked', false);">{{ text_dell }}</a>
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                  <div class="col-sm-10 them">
                     <select name="module_aridius_category_footer_status" id="input-status" class="form-control">
                        {% if (module_aridius_category_footer_status) %} 
                        <option value="1" selected="selected">{{ text_enabled }}</option>
                        <option value="0">{{ text_disabled }}</option>
                        {% else %} 
                        <option value="1">{{ text_enabled }}</option>
                        <option value="0" selected="selected">{{ text_disabled }}</option>
                        {% endif %} 
                     </select>
                  </div>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>
<script><!--
   function apply() {
   	$('#form-category').append('<input type="hidden" id="apply" name="apply" value="1" />');
   	$('#form-category').submit();
   }
   //-->
</script>
