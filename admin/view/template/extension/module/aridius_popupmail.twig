{{ header }}{{ column_left }} 
<div id="content">
   <div class="page-header">
      <div class="container-fluid">
         <div class="pull-right">
            <button type="submit" form="form-aridius_popupmail" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
            <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
         </div>
         <h1>{{ heading_title }}</h1>
         <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %} 
            <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
            {% endfor %} 
         </ul>
      </div>
   </div>
   <div class="container-fluid">
      {% if (error_warning) %} 
      <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
         <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %} 
      <div class="panel panel-default">
         <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
         </div>
         <div class="panel-body">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-aridius_popupmail" class="form-horizontal">
               <div class="form-group">
                  <label class="col-sm-2 control-label">{{ text_btpl }}</label>
                  <div class="col-sm-10 them">
                     {% for language in languages %} 
                     <div class="input-group">
                        <span class="input-group-addon">
                        <img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" />
                        </span>
                        <input name="module_aridius_popupmail_placeholder[{{ language['language_id'] }}]" value="{{ module_aridius_popupmail_placeholder[language['language_id']] }}" class="form-control" />
                     </div>
                     {% endfor %} 
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label">{{ text_bt }}</label>
                  <div class="col-sm-10 them">
                     {% for language in languages %} 
                     <div class="input-group">
                        <span class="input-group-addon">
                        <img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" />
                        </span>
                        <input name="module_aridius_popupmail_pl[{{ language['language_id'] }}]" value="{{ module_aridius_popupmail_pl[language['language_id']] }}" class="form-control" />
                     </div>
                     {% endfor %} 
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label">{{ text_mail_subject }}</label>
                  <div class="col-sm-10 them">
                     {% for language in languages %} 
                     <div class="input-group">
                        <span class="input-group-addon">
                        <img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" />
                        </span>
                        <input name="module_aridius_popupmail_subject[{{ language['language_id'] }}]" value="{{ module_aridius_popupmail_subject[language['language_id']] }}" class="form-control" />
                     </div>
                     {% endfor %} 
                  </div>
               </div>
               <ul class="nav nav-tabs" id="language">
                  {% for language in languages %} 
                  <li><a href="#language{{ language['language_id'] }}" data-toggle="tab"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /> {{ language['name'] }}</a></li>
                  {% endfor %} 
               </ul>
               <div class="tab-content">
                  {% for language in languages %} 
                  <div class="tab-pane" id="language{{ language['language_id'] }}">
                     <div class="form-group">
                        <label class="col-sm-2 control-label"
                           for="input-message{{ language['language_id'] }}">{{ text_mail_message }}</label>
                        <div class="col-sm-10 them">
                           <textarea name="module_aridius_popupmail_message[{{ language['language_id'] }}]" id="input-message{{ language['language_id'] }}" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control summernote">{{ module_aridius_popupmail_message[language['language_id']] is defined ? module_aridius_popupmail_message[language['language_id']] : '' }}</textarea>
                        </div>
                     </div>
                     <div class="form-group">
                        <label class="col-sm-2 control-label"
                           for="input-img{{ language['language_id'] }}">{{ text_mail_img }}</label>
                        <div class="col-sm-10 them">
                           <textarea name="module_aridius_popupmail_img[{{ language['language_id'] }}]" id="input-img{{ language['language_id'] }}" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control summernote">{{ module_aridius_popupmail_img[language['language_id']] is defined ? module_aridius_popupmail_img[language['language_id']] : '' }}</textarea>
                        </div>
                     </div>
                     <div class="form-group">
                        <label class="col-sm-2 control-label"
                           for="input-description{{ language['language_id'] }}">{{ entry_description }}</label>
                        <div class="col-sm-10 them">
                           <textarea name="module_aridius_popupmail_description[{{ language['language_id'] }}]" id="input-description{{ language['language_id'] }}" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control summernote">{{ module_aridius_popupmail_description[language['language_id']] is defined ? module_aridius_popupmail_description[language['language_id']] : '' }}</textarea>
                        </div>
                     </div>
                  </div>
                  {% endfor %} 
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-statusdes">{{ text_adddescription }}</label>
                  <div class="col-sm-10 them">
                     <select name="module_aridius_popupmaildes_status" id="input-statusdes" class="form-control">
                        {% if (module_aridius_popupmaildes_status) %} 
                        <option value="1" selected="selected">{{ text_enabled }}</option>
                        <option value="0">{{ text_disabled }}</option>
                        {% else %} 
                        <option value="1">{{ text_enabled }}</option>
                        <option value="0" selected="selected">{{ text_disabled }}</option>
                        {% endif %} 
                     </select>
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-popupmail_time">{{ text_time }}</label>
                  <div class="col-sm-10 them">
                     <input type="text" name="module_aridius_popupmail_time" value="{{ module_aridius_popupmail_time }}" id="input-popupmail_time" class="form-control" />
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-popupmail_delay">{{ text_delay }}</label>
                  <div class="col-sm-10 them">
                     <input type="text" name="module_aridius_popupmail_delay" value="{{ module_aridius_popupmail_delay }}" id="input-popupmail_delay" class="form-control" />
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label" >{{ text_day }}</label>
                  <div class="col-sm-10 them">
                     <select name="module_aridius_popupmail_day" class="form-control">
                     <option value="0"{% if (module_aridius_popupmail_day < 1) %} {{ ' selected="selected"' }} {% endif %}>{{ all_day }}</option>
                     <option value="2"{% if (module_aridius_popupmail_day == 2) %} {{ ' selected="selected"' }} {% endif %}>{{ working_day }}</option>
                     <option value="3"{% if (module_aridius_popupmail_day == 3) %} {{ ' selected="selected"' }} {% endif %}>{{ weekend_day }}</option>
                     </select>
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-module_aridius_popupmail_status">{{ entry_status }}</label>
                  <div class="col-sm-10 them">
                     <select name="module_aridius_popupmail_status" id="input-module_aridius_popupmail_status" class="form-control">
                        {% if (module_aridius_popupmail_status) %} 
                        <option value="1" selected="selected">{{ text_enabled }}</option>
                        <option value="0">{{ text_disabled }}</option>
                        {% else %} 
                        <option value="1">{{ text_enabled }}</option>
                        <option value="0" selected="selected">{{ text_disabled }}</option>
                        {% endif %} 
                     </select>
                  </div>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>
<script><!--
   $('#language a:first').tab('show');
   $('#option a:first').tab('show');
   //-->
</script>
<script src="view/javascript/summernote/summernote.js"></script>
<link href="view/javascript/summernote/summernote.css" rel="stylesheet" />
<script src="view/javascript/summernote/opencart.js"></script>
{{ footer }}
