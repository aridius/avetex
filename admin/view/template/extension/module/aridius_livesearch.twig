{{ header }}{{ column_left }} 
<div id="content">
   <div class="page-header">
      <div class="container-fluid">
         <div class="pull-right">
            <button type="submit" form="form-livesearch" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp;&nbsp;{{ button_save }}</button>
            <a onclick="apply();" class="btn btn-primary" data-toggle="tooltip" title="{{ button_apply }}" ><i class="fa fa-check"></i>&nbsp;&nbsp;{{ button_apply }}</a> 
            <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
         </div>
         <h1>{{ heading_title }}</h1>
         <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %} 
            <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
            {% endfor %} 
         </ul>
      </div>
   </div>
   <div class="container-fluid">
      {% if (error_warning) %} 
      <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
         <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %} 
      <div class="panel panel-default">
         <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
         </div>
         <div class="panel-body">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-livesearch" class="form-horizontal">
               <div class="form-group">
                  <label class="col-sm-2 control-label">{{ entry_livesearch_model }}</label>
                  <div class="col-sm-10 them">
                     <label class="radio-inline">
                     {% if (module_aridius_livesearch_livesearch_model) %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_livesearch_model" value="0" />
                     <span class="im_option">{{ text_yes }}</span>
                     {% else %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_livesearch_model" value="0" checked="checked" />
                     <span class="im_option">{{ text_yes }}</span>
                     {% endif %} 
                     </label>
                     <label class="radio-inline">
                     {% if (not module_aridius_livesearch_livesearch_model) %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_livesearch_model" value="1" />
                     <span class="im_option">{{ text_no }}</span>
                     {% else %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_livesearch_model" value="1" checked="checked" />
                     <span class="im_option">{{ text_no }}</span>
                     {% endif %} 
                     </label>
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label">{{ entry_livesearch_description }}</label>
                  <div class="col-sm-10 them">
                     <label class="radio-inline">
                     {% if (module_aridius_livesearch_description) %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_description" value="0" />
                     <span class="im_option">{{ text_yes }}</span>
                     {% else %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_description" value="0" checked="checked"  />
                     <span class="im_option">{{ text_yes }}</span>
                     {% endif %} 
                     </label>
                     <label class="radio-inline">
                     {% if (not module_aridius_livesearch_description) %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_description" value="1" />
                     <span class="im_option">{{ text_no }}</span>
                     {% else %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_description" value="1" checked="checked" />
                     <span class="im_option">{{ text_no }}</span>
                     {% endif %} 
                     </label>
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label">{{ entry_livesearch_sku }}</label>
                  <div class="col-sm-10 them">
                     <label class="radio-inline">
                     {% if (module_aridius_livesearch_sku) %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_sku" value="0" />
                     <span class="im_option">{{ text_yes }}</span>
                     {% else %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_sku" value="0" checked="checked" />
                     <span class="im_option">{{ text_yes }}</span>
                     {% endif %} 
                     </label>
                     <label class="radio-inline">
                     {% if (not module_aridius_livesearch_sku) %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_sku" value="1" />
                     <span class="im_option">{{ text_no }}</span>
                     {% else %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_sku" value="1" checked="checked" />
                     <span class="im_option">{{ text_no }}</span>
                     {% endif %} 
                     </label>
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label">{{ entry_livesearch_tag }}</label>
                  <div class="col-sm-10 them">
                     <label class="radio-inline">
                     {% if (module_aridius_livesearch_tag) %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_tag" value="0" />
                     <span class="im_option">{{ text_yes }}</span>
                     {% else %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_tag" value="0"  checked="checked" />
                     <span class="im_option">{{ text_yes }}</span>
                     {% endif %} 
                     </label>
                     <label class="radio-inline">
                     {% if (not module_aridius_livesearch_tag) %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_tag" value="1" />
                     <span class="im_option">{{ text_no }}</span>
                     {% else %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_tag" value="1" checked="checked" />
                     <span class="im_option">{{ text_no }}</span>
                     {% endif %} 
                     </label>
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label">{{ entry_livesearch_img }}</label>
                  <div class="col-sm-10 them">
                     <label class="radio-inline">
                     {% if (module_aridius_livesearch_img) %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_img" value="0" />
                     <span class="im_option">{{ text_yes }}</span>
                     {% else %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_img" value="0"  checked="checked" />
                     <span class="im_option">{{ text_yes }}</span>
                     {% endif %} 
                     </label>
                     <label class="radio-inline">
                     {% if (not module_aridius_livesearch_img) %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_img" value="1" />
                     <span class="im_option">{{ text_no }}</span>
                     {% else %} 
                     <input class="options_none" type="radio" name="module_aridius_livesearch_img" value="1" checked="checked" />
                     <span class="im_option">{{ text_no }}</span>
                     {% endif %} 
                     </label>
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-module_aridius_livesearch_symbol">{{ entry_livesearch_symbol }}</label>
                  <div class="col-sm-10 them">
                     <input type="text" name="module_aridius_livesearch_symbol" value="{{ module_aridius_livesearch_symbol }}" placeholder="{{ entry_livesearch_symbol }}" id="input-module_aridius_livesearch_symbol" class="form-control" />
                     {% if (error_module_aridius_livesearch_symbol) %} 
                     <div class="text-danger">{{ error_module_aridius_livesearch_symbol }}</div>
                     {% endif %} 
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-module_aridius_livesearch_limit">{{ entry_aridius_livesearch_limit }}</label>
                  <div class="col-sm-10 them">
                     <input type="text" name="module_aridius_livesearch_limit" value="{{ module_aridius_livesearch_limit }}" placeholder="{{ entry_module_aridius_livesearch_limit }}" id="input-module_aridius_livesearch_limit" class="form-control" />
                     {% if (error_module_aridius_livesearch_limit) %} 
                     <div class="text-danger">{{ error_module_aridius_livesearch_limit }}</div>
                     {% endif %} 
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-module_aridius_livesearch_width">{{ entry_aridius_livesearch_width }}</label>
                  <div class="col-sm-10 them">
                     <input type="text" name="module_aridius_livesearch_width" value="{{ module_aridius_livesearch_width }}" placeholder="{{ entry_module_aridius_livesearch_width }}" id="input-module_aridius_livesearch_width" class="form-control" />
                     {% if (error_module_aridius_livesearch_width) %} 
                     <div class="text-danger">{{ error_module_aridius_livesearch_width }}</div>
                     {% endif %} 
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-height">{{ entry_aridius_livesearch_height }}</label>
                  <div class="col-sm-10 them">
                     <input type="text" name="module_aridius_livesearch_height" value="{{ module_aridius_livesearch_height }}" placeholder="{{ entry_module_aridius_livesearch_height }}" id="input-module_aridius_livesearch_height" class="form-control" />
                     {% if (error_module_aridius_livesearch_height) %} 
                     <div class="text-danger">{{ error_module_aridius_livesearch_height }}</div>
                     {% endif %} 
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                  <div class="col-sm-10 them">
                     <select name="module_aridius_livesearch_status" id="input-status" class="form-control">
                        {% if (module_aridius_livesearch_status) %} 
                        <option value="1" selected="selected">{{ text_enabled }}</option>
                        <option value="0">{{ text_disabled }}</option>
                        {% else %} 
                        <option value="1">{{ text_enabled }}</option>
                        <option value="0" selected="selected">{{ text_disabled }}</option>
                        {% endif %} 
                     </select>
                  </div>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>
<script><!--
   function apply() {
   	$('#form-livesearch').append('<input type="hidden" id="apply" name="apply" value="1" />');
   	$('#form-livesearch').submit();
   }
   //-->
</script>
{{ footer }}
