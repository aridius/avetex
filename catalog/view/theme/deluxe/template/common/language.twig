{% if languages|length > 1 %}
<div class="pull-right">
<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-language">
  <div class="btn-group">
    <button class="btn btn-link btnp dropdown-toggle" data-toggle="dropdown">
    {% for language in languages %} 
    {% if (language['code'] == code) %} 
    <img class="languages" src="catalog/language/{{ language['code'] }}/{{ language['code'] }}.png" width="16" height="11" alt="{{ language['name'] }}" title="{{ language['name'] }}"> {{ language['name'] }} 
    {% endif %} 
    {% endfor %} 
    <span class="hidden-xs hidden-sm hidden-md"></span> <i class="fa fa-caret-down"></i></button>
    <ul class="dropdown-menu">
      {% for language in languages %} 
      <li><button class="language-call btn btn-link btn-block language-select" type="button" name="{{ language['code'] }}"><img src="catalog/language/{{ language['code'] }}/{{ language['code'] }}.png" width="16" height="11" alt="{{ language['name'] }}" title="{{ language['name'] }}" /> {{ language['name'] }}</button></li>
      {% endfor %} 
    </ul>
  </div>
  <input type="hidden" name="code" value="" />
  <input type="hidden" name="redirect" value="{{ redirect }}" />
</form>
</div>
{% endif %} 
