<div class="callback">
   <div class="callbackbor">
      <button title="close" type="button" class="mfp-close">&#215;</button>
      <div class="name-popup">{{ heading_title}}</div>
   </div>
   <div class="callback2">
      <div class="form-horizontal formcallback">
         {% if (not aridiuscallback_firstnameshow == '1') %}		
         <div class="form-group {% if (not aridiuscallback_firstnamevalid) %}required{% endif %}">
            <label class="control-label" for="input-firstname">{{ enter_firstname }}</label>
            <div class="input-group">
               <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
               <input  name="aridiuscallback_firstname" placeholder="{{ aridiuscallback_placeholderfirstname[language_id] }}" class="form-control"  type="text">
            </div>
            <div class="aridiuscallback_errorfirstname"></div>
         </div>
         {% endif %}	
         <div class="form-group required">
            <label class="control-label" for="input-contact">{{ enter_phone }}</label>
            <div class="input-group">
               <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
               <input id="telephone" name="aridiuscallback_contact" placeholder="{{ aridiuscallback_placeholdertell[language_id] }}" class="form-control" type="text">
            </div>
            <div class="aridiuscallback_errorcontact"></div>
         </div>
         {% if (not aridiuscallback_emailshow == '1') %}		
         <div class="form-group {% if (not aridiuscallback_emailvalid) %}required{% endif %}">
            <label class="control-label" for="input-email">{{ enter_email }}</label>
            <div class="input-group">
               <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
               <input name="aridiuscallback_email" placeholder="{{ aridiuscallback_placeholderemail[language_id] }}" class="form-control"  type="text">
            </div>
            <div class="aridiuscallback_erroremail"></div>
         </div>
         {% endif %} 
         {% if (not aridiuscallback_timetshow == '1') %}	
         <div class="row">
            <div class="col-sm-12" >
               <div class="form-group">
                  <label class="control-label" for="input-customer">{{ enter_time }}</label>
               </div>
            </div>
            <div class="col-sm-6" >
               <div class="form-group fixformtime2">
                  <div class="input-group">
                     <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>            
                     <input id='datetimepickerin' name="aridiuscallback_timein" placeholder="{{ aridiuscallback_placeholdertimein[language_id] }}" type='text' class="form-control"  />
                  </div>
               </div>
            </div>
            <div class="col-sm-6" >
               <div class="form-group fixformtime">
                  <div class="input-group">
                     <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>      
                     <input id='datetimepickeroff' name="aridiuscallback_timeoff" placeholder="{{ aridiuscallback_placeholdertimeoff[language_id] }}" type='text' class="form-control"  />
                  </div>
               </div>
            </div>
         </div>
         {% endif %} 
         {% if (not aridiuscallback_commentshow == '1') %}	
         <div class="form-group">
            <label class="control-label" for="input-comment">{{ enter_comment }}</label>
            <div class="input-group">
               <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
               <textarea class="form-control" name="aridiuscallback_comment" placeholder="{{ aridiuscallback_placeholdercomment[language_id] }}"></textarea>
            </div>
         </div>
         {% endif %}		
      </div>
      {% if (aridiuscallback_adddescriptionshow == '1') %} 
      <br />		
      <div class="row">
         <div class="col-xs-12">
            {{ aridiuscallback_description }} 
         </div>
      </div>
      {% endif %}	
      <br />	
      <button type="button" id="call-order-submit" data-loading-text="{{ enter_load }}" class="btn-cart fixcenter">{{ button_send }}</button>
   </div>
</div>
<script>
jQuery(function(a){a("#telephone").mask("{{ aridiuscallback_mask[language_id] }}")});
jQuery(function(a){a("#datetimepickerin, #datetimepickeroff").mask("99:99")});
</script>
