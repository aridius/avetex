{% if (not aridiusinstock_descriptionshow == '1' or not aridiusinstock_img == '1' ) %}
<div class="instock">
{% else %}
<div class="instock_fl">
{% endif %}
<div class="instockf">
   <button title="close" type="button" class="mfp-close">&#215;</button>
   <div class="name-popup">{{ heading_title }}</div>
</div>
<div class="instock2">
   <div class="row">
      {% if (not aridiusinstock_descriptionshow == '1' or not aridiusinstock_img == '1' ) %}
      <div class="col-sm-6">
         <div class="name-product">{{ product_name }}</div>
         {% if (not aridiusinstock_img == '1') %}
         <div class="image_wrap">
            <a href="{{ product_href }}"><img src="{{ popup }}" title="{{ product_name }}" alt="{{ product_name }} class="img-responsive"></a>
         </div>
         {% endif %}
         {% if (not aridiusinstock_descriptionshow == '1') %}
         {{ product_description }}
         {% endif %}
      </div>
      {% endif %}
      {% if (not aridiusinstock_descriptionshow == '1' or not aridiusinstock_img == '1' ) %}
      <div class="col-sm-6">
         {% else %}
         <div class="col-sm-12">
            {% endif %}
            {% if (aridiusinstock_descriptionshow == '1' and aridiusinstock_img == '1' ) %}
            <div class="name-product">{{ product_name }}</div>
            {% endif %}
            <div class="form-horizontal forminstock">
               {% if (not aridiusinstock_firstnameshow == '1') %}
               <div class="form-group {% if (not aridiusinstock_firstnamevalid) %}required{% endif %}">
                  <label class="control-label" for="input-firstname">{{ enter_firstname }}</label>
                  <div class="input-group">
                     <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                     <input  name="aridiusinstock_firstname" placeholder="{{ aridiusinstock_placeholderfirstname[language_id] }}" class="form-control"  type="text">
                  </div>
                  <div class="aridiusinstock_errorfirstname"></div>
               </div>
               {% endif %}
               {% if (not aridiusinstock_tellshow == '1') %}
               <div class="form-group {% if (not aridiusinstock_tellvalid) %}required{% endif %}">
                  <label class="control-label" for="input-contact">{{ enter_phone }}</label>
                  <div class="input-group">
                     <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                     <input id="telephone" name="aridiusinstock_contact" placeholder="{{ aridiusinstock_placeholdertell[language_id] }}" class="form-control" type="text">
                  </div>
                  <div class="aridiusinstock_errorcontact"></div>
               </div>
               {% endif %}
               {% if (not aridiusinstock_emailshow == '1') %}
               <div class="form-group {% if (not aridiusinstock_emailvalid) %}required{% endif %}">
                  <label class="control-label" for="input-email">{{ enter_email }}</label>
                  <div class="input-group">
                     <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                     <input name="aridiusinstock_email" placeholder="{{ aridiusinstock_placeholderemail[language_id] }}" class="form-control"  type="text">
                  </div>
                  <div class="aridiusinstock_erroremail"></div>
               </div>
               {% endif %}
            </div>
         </div>
      </div>
      {% if (aridiusinstock_adddescriptionshow == '1') %}
      <br />
      <div class="row">
         <div class="col-xs-12">
            {{ aridiusinstock_description }}
         </div>
      </div>
      {% endif %}
      <br />
      <button type="button" id="instock-order-submit" data-loading-text="{{ enter_load }}" class="btn btn-primary btnfast" data-product-id="{{ product_id }}">{{ button_send }}</button>
   </div>
</div>
<script>
   jQuery(function($){
   $("#telephone").mask("{{ aridiusinstock_mask[language_id] }}");
   });
</script>
